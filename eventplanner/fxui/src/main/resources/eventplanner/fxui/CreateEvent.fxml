<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eventplanner.fxui.NewEventController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Button fx:id="myEventsButton" layoutX="516.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleMyEventsButtonClicked" prefHeight="26.0" prefWidth="110.0" text="Create event" />
            <Button fx:id="eventsButton" layoutX="390.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleEventsButtonClicked" prefHeight="26.0" prefWidth="110.0" text="Events" />
            <Button fx:id="createEventButton" disable="true" layoutX="265.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleCreateEventButtonClicked" prefHeight="26.0" prefWidth="110.0" text="Create Event" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#a44231" height="68.0" stroke="#a44231" strokeType="INSIDE" width="640.0" />
            <Text fill="WHITE" layoutX="277.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create Events" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" layoutY="68.0" prefHeight="286.0" prefWidth="640.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" prefHeight="27.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <DatePicker fx:id="startDatePicker" promptText="insert start-date" />
                              <TextField fx:id="startTimeField" prefHeight="25.0" prefWidth="56.0" promptText="hh:mm" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="27.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <DatePicker fx:id="endDatePicker" promptText="insert end-date" />
                              <TextField fx:id="endTimeField" prefHeight="25.0" prefWidth="56.0" promptText="hh:mm" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="27.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <TextField fx:id="nameField" prefHeight="25.0" prefWidth="100.0" promptText="name" />
                              <TextField fx:id="locationField" prefHeight="25.0" prefWidth="134.0" promptText="location" />
                           </children>
                        </HBox>
                        <TextField fx:id="descField" alignment="TOP_LEFT" prefHeight="86.0" prefWidth="300.0" promptText="description" />
                        <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="choose type" />
                     </children>
                     <padding>
                        <Insets left="20.0" top="30.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets left="20.0" right="20.0" top="30.0" />
                     </padding>
                     <children>
                        <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreateNewEventButton" text="Create new event" />
                        <TextArea fx:id="outputMessage" blendMode="MULTIPLY" cacheShape="false" centerShape="false" editable="false" focusTraversable="false" prefHeight="123.0" prefWidth="280.0" scaleShape="false" style="-fx-border-radius: 0; -fx-background-insets: 0; -fx-background-color: transparent, white, transparent, white;" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
      </children>
    </AnchorPane>
  </children>
</VBox>
